{
  "appName": "orders",
  "projectName": "micro-shop",
  "replicas": 1,
  "restartPolicy": "Always",

  "containers": [
    {
      "image": "order:latest",
      "memory": "128mi",
      "cpu": "500M",
      "ports": [3000],
      "env": {
        "config": [
          {
            "name": "DATABASE_USER",
            "value": "root"
          },
          {
            "name": "DATABASE_NAME",
            "value": "Admin"
          }
        ],
        "secret": [
          {
            "name": "DATABASE_PASSWORD",
            "value": "password"
          }
        ]
      }
    }
  ]
}
